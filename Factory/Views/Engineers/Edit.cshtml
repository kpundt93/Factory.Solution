@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;

<h1>Dr. Sillystringz's Factory</h1>
<hr />
<h3>Edit Engineer</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.LabelFor(model => model.FirstName, "First Name")
  @Html.EditorFor(model => model.FirstName)
  <br>
  @Html.LabelFor(model => model.LastName, "Last Name")
  @Html.EditorFor(model => model.LastName)
  <br>
  @Html.LabelFor(model => model.Title)
  @Html.EditorFor(model => model.Title)
  <br>
  @Html.Label("Select a machine")
  @Html.DropDownList("MachineId")
  <br>
  @Html.LabelFor(model => model.Status, "Status:")
  <br>
  @foreach (var status in Model.StatusOptions)
  {
    @Html.RadioButtonFor(model => model.Status, status) @status<br>
  }
  <button type="submit" value="Save" class="btn btn-primary">Save</button>
}

<p>@Html.ActionLink("Back to details", "Details", new { id = Model.EngineerId })</p>
<p>@Html.ActionLink("Back to all engineers", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>